<%= form_for Recensie.new do |f| %>
<div class="form-group">
  <%= f.text_field :name, class: 'form-control', placeholder: 'Vul hier uw naam in' %>
</div>

<div class="form-group">
  <%= f.text_area :message, class: 'form-control', placeholder: 'Schrijf hier uw recensie' %>
</div>

<div class="form-group">
  <%= f.submit "Verstuur", class: 'btn btn-success' %>
</div>

<% end %>
